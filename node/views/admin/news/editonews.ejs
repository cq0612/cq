<link rel="stylesheet" href="/bootstrap/css/bootstrap.css">



<link rel="stylesheet" href="/css/basic.css">


<nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">

            <img src="/images/node.jpg" height="44px;" />

        </div>
        <div class="collapse navbar-collapse" id="example-navbar-collapse">
            <ul class="nav navbar-nav">

                <li class="active"><a href="#">商品管理</a>
                </li>
                <li class="active"><a href="#">系统设置</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a>欢迎您,admin</a>
                </li>
                <li><a href="#">安全退出</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
           <%include ../public/aside%>
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    增加新闻分类
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/news/editonews" method="post">


                            <ul>

                                <input  name="id" id="catename"  value="<%=newslist._id%>"/>

                                <li> 新闻名称: <input type="text" name="title" value="<%=newslist.title%>"/></li>

                                <li> 作　　者: <input type="text" name="author" value="<%=newslist.author%>"/></li>

                                <li> 分　　类 :

                                    <select name="cid" id="cid">

                                        <%for(var i=0;i<catelist.length;i++){%>

                                            <%if(catelist[i]._id==newslist.cid){%>
                                                <option selected  value="<%=catelist[i]._id%>"><%=catelist[i].name%></option>
                                            <%}else{%>
                                                <option  value="<%=catelist[i]._id%>"><%=catelist[i].name%></option>
                                            <%}%>
                                        <%}%>

                                    </select>


                                </li>

                                <li>
                                    分类描述: <br/>
                                    <textarea name="description" id="" cols="60" rows="8"> <%=newslist.description%></textarea>
                                </li>


                                <li>
                                    内容 <br/>
                                    <textarea name="content" id="" cols="60" rows="8"><%=newslist.content%></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
<script>
    var cid=document.getElementById('cid');
    var catename=document.getElementById('catename');
    var options=cid.getElementsByTagName('option');

    cid.onchange = function(){
        for(var i=0;i<options.length;i++){
            if(options[i].selected){

                catename.value=options[i].innerHTML;
            }

        }
    }
</script>
</body>
</html>